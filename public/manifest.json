{
    "manifest_version": 3,
    "version": "1.0.0",
    "short_name": "Prompt mate",
    "name": "Prompt mate",
    "action": {},
    "permissions": ["identity", "storage"],
    "background": {
        "service_worker": "/js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["/css/root.css"],
            "js": ["/static/js/content.js"]
        }
    ],
    "oauth2": {
        "scopes": [
            "https://www.googleapis.com/auth/userinfo.profile",
            "https://www.googleapis.com/auth/userinfo.email"
        ]
    }
}
